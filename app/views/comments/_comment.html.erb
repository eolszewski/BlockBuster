<%= div_for comment do %>
    <p>
        <strong>
            Posted <%= time_ago_in_words(comment.created_at) %> ago
        </strong>
        <br/>
        <%= comment.body %>
		 <%= button_to 'Upvote', like_post_comment_path(@post, comment), :method=>:post, :remote => true, :class => "btn btn-primary"  %>
		 <%= button_to 'Downvote', dislike_post_comment_path(@post, comment), :method=>:post, :remote => true, :class => "btn btn-primary"  %>
    </p>
<% end %> 