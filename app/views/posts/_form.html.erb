<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <div class="row">
      <div class="col-md-2" style="display:inline-block;">
        <h3>
          <%= f.label :location %>
        </h3>
      </div>
      <div class="col-md-10" style="display:inline-block;">
        <h3>
          <%= f.select :location, options_for_select(Post::LOCATIONS), :class => "form-control" %>
        </h3>
      </div>
    </div>
    <div class="row">
      <div class="col-md-2" style="display:inline-block;">
        <h3>
          <%= f.label :body %>
        </h3>
      </div>
      <div class="col-md-10" style="display:inline-block;">
        <h3>
          <%= f.text_area :body, :style => "resize:vertical; width: 100%; height: 5em;" %>
        </h3>
      </div>
    </div>
    
  </div>

  <%= f.submit :class => 'btn btn-primary pull-right' %>
<% end %>
