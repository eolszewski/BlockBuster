 <p id="notice"><%= notice %></p>

 <%= render :partial => @post %>
 <%= button_to 'Upvote', like_post_path(@post), :method=>:post, :remote => true, :class => "btn btn-primary"  %>
 <%= button_to 'Downvote', dislike_post_path(@post), :method=>:post, :remote => true, :class => "btn btn-primary"  %>

 <% if session[:post_ids] && session[:post_ids].include?(@post.id) %>
 	<%= link_to 'Edit', edit_post_path(@post) %> |	
 <% end %>
 <%= link_to 'Back', posts_path %>

 <h2>Comments</h2>
 <div id="comments">
    <%= render :partial => @post.comments %>
 </div>

 <%= form_for [@post, Comment.new] do |f| %>
    <p>
        <%= f.label :body, "New comment" %><br/>
        <%= f.text_area :body %>
    </p>
    <p><%= f.submit "Add comment" %></p>
<% end %>